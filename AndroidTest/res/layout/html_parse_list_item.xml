<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/html_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:padding="5dp"
        android:text="2014年11月25日 昨日最新"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/html_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="3"
        android:padding="5dp"
        android:text="摘录了 [有哪个瞬间会让你想‘就一直这样下去多好’？]、[看见说的话阿卡家都是废话啊多少空间发挥哈的发挥的说法]、[adjfhajkhfak空间撒点回复可见萨芬]、[阿道夫京哈即可合法分开就阿訇多发d]、[阿的说法和房间爱还是对方阿卡家电话发放]"
        android:textSize="14sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/html_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:src="@drawable/ic_launcher_03" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:id="@+id/html_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="近日热门"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/html_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="right"
            android:text="2014-11-25 11:22:57"
            android:textColor="@color/gray"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>