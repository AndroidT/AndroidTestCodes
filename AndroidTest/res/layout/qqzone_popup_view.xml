<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/qz_bg_write_operation"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <TextView
        android:id="@+id/add_write"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/qz_icon_write_normal"
        android:gravity="center_horizontal"
        android:text="说说"
        android:drawablePadding="5dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/add_camera"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/qz_icon_camera_normal"
        android:gravity="center_horizontal"
        android:text="照片"
        android:drawablePadding="5dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/add_sign"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/qz_icon_sign_normal"
        android:gravity="center_horizontal"
        android:text="位置"
        android:drawablePadding="5dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/add_voice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/qz_icon_voice_normal"
        android:gravity="center_horizontal"
        android:text="语音"
        android:drawablePadding="5dp"
        android:textColor="@color/white" />

</LinearLayout>