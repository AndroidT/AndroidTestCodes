<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/content_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="66dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/toolbar_bg_normal"
        android:gravity="center_horizontal" >

        <FrameLayout
            android:id="@+id/layout_friendfeed"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/img_friendfeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="16dp"
                android:src="@drawable/tab_friendfeed_btn" />

            <TextView
                android:id="@+id/txt_friendfeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="6dp"
                android:text="动态"
                android:textColor="@color/white" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/layout_myfeed"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/img_myfeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="16dp"
                android:src="@drawable/tab_myfeed_btn" />

            <TextView
                android:id="@+id/txt_myfeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="6dp"
                android:text="与我相关"
                android:textColor="@color/white" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/layout_add"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/img_add_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:src="@drawable/toolbar_btn_normal" />

            <ImageView
                android:id="@+id/img_add_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:src="@drawable/toolbar_plus" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/layout_home"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/img_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="16dp"
                android:src="@drawable/tab_home_btn" />

            <TextView
                android:id="@+id/txt_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="6dp"
                android:text="我的空间"
                android:textColor="@color/white" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/layout_more"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/img_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="16dp"
                android:src="@drawable/tab_more_btn" />

            <TextView
                android:id="@+id/txt_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="6dp"
                android:text="更多"
                android:textColor="@color/white" />
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>